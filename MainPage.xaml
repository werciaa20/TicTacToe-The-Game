<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tictactoe.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="10"
            Padding="24">
            <Label
                x:Name="statusLabel"
                Text="Player X's turn"
                FontSize="24"
                HorizontalOptions="Center" />
            <Grid x:Name="GameGrid"
                  RowSpacing="5"
                  ColumnSpacing="5"
                  HorizontalOptions="Center"
                  VerticalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <!-- Buttons for the 3x3 board -->
                <Button
                    x:Name="btn00"
                    Clicked="OnCellClicked"
                    Grid.Row="0"
                    Grid.Column="0" />
                <Button
                    x:Name="btn01"
                    Clicked="OnCellClicked"
                    Grid.Row="0"
                    Grid.Column="1" />
                <Button
                    x:Name="btn02"
                    Clicked="OnCellClicked"
                    Grid.Row="0"
                    Grid.Column="2" />
                <Button
                    x:Name="btn10"
                    Clicked="OnCellClicked"
                    Grid.Row="1"
                    Grid.Column="0" />
                <Button 
                    x:Name="btn11"
                    Clicked="OnCellClicked" 
                    Grid.Row="1" 
                    Grid.Column="1" />
                <Button 
                    x:Name="btn12" 
                    Clicked="OnCellClicked" 
                    Grid.Row="1" 
                    Grid.Column="2" />
                <Button 
                    x:Name="btn20" 
                    Clicked="OnCellClicked" 
                    Grid.Row="2" 
                    Grid.Column="0" />
                <Button 
                    x:Name="btn21" 
                    Clicked="OnCellClicked" 
                    Grid.Row="2"
                    Grid.Column="1" />
                <Button 
                    x:Name="btn22" 
                    Clicked="OnCellClicked" 
                    Grid.Row="2" 
                    Grid.Column="2" />
            </Grid>
            <Button
                Text="Reset"
                Clicked="OnResetClicked"
                BackgroundColor="LightGray" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
